{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/core",
        "commands": [
          "rm -rf ../../dist/packages/core",
          "tsc --project tsconfig.lib.json --outDir ../../dist/packages/core/dist/cjs --rootDir src --declaration false",
          "tsc --project tsconfig.lib.json --outDir ../../dist/packages/core/dist/esm --rootDir src --module esnext --declaration false",
          "tsc --project tsconfig.lib.json --outDir ../../dist/packages/core/dist/types --rootDir src --module esnext --emitDeclarationOnly true",
          "cp README.md package.json ../../dist/packages/core"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/core"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": false,
        "codeCoverage": true
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "noBuild": true
      }
    }
  },
  "tags": []
}
